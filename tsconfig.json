{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gds/ui": ["libs/ui/src/index.ts"],
      "@gds/ng-ui": ["libs/ng-ui/src/index.ts"],
      "@gds/ra-ui": ["libs/ra-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
